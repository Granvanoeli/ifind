<simulation_config id="TrecUser">

	<topic number="307" filename="data/topic.307" />

	<output directory="output/" />

	<queryGenerator class="TrecTopicQueryGenerator">
		<attribute name="stopword_file" type="str" value="data/stopwords.txt" is_argument="true" />
	</queryGenerator>

	<logger class="FixedCostLogger">
		<attribute name="time_limit" type="int" value="300" is_argument="true" />
		<attribute name="query_cost" type="int" value="10" is_argument="true" />
		<attribute name="document_cost" type="int" value="20" is_argument="true" />
		<attribute name="snippet_cost" type="int" value="3" is_argument="true" />
		<attribute name="serp_results_cost" type="int" value="5" is_argument="true" />
		<attribute name="mark_document_cost" type="int" value="3" is_argument="true" />
	</logger>

	<textClassifiers>
		<snippetClassifier class="TrecTextClassifier">
			<attribute name="topic" type="component" value="" is_argument="true" />
			<attribute name="stopword_file" type="str" value="data/stopwords.txt" is_argument="true" />
			<attribute name="background_file" type="str" value="data/vocab.txt" is_argument="true" />
		</snippetClassifier>

		<documentClassifier class="TrecTextClassifier">
			<attribute name="topic" type="component" value="" is_argument="true" />
			<attribute name="stopword_file" type="str" value="data/stopwords.txt" is_argument="true" />
			<attribute name="background_file" type="str" value="data/vocab.txt" is_argument="true" />
		</documentClassifier>
	</textClassifiers>

	<searchInterface class="WhooshSearchInterface">
		<attribute name="whoosh_index_dir" type="str" value="data/fullindex" is_argument="true" />
	</searchInterface>

	<decisionMaker class="TrecDepthDecisionMaker">
	</decisionMaker>

</simulation_config>